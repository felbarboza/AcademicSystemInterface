#pragma once
#include "Departamento.h"
#include "ListaAlunos.h"

class Disciplina
{
private:
	int id;
	string nome;
	string area_conhecimento;
	Departamento* pDeptoAssociado;
	ListaAlunos ObjLAlunos;
public:
	Disciplina(int id, int tamanho_lista = 45, const char* ac = "");
